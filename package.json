{
    "name": "ihr360-xxx-static",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@ant-design/icons": "^5.2.6",
        "@rsbuild/core": "^1.5.4",
        "@rsbuild/plugin-less": "^1.5.0",
        "@rsbuild/plugin-react": "^1.4.0",
        "@rsbuild/plugin-umd": "^1.0.4",
        "ahooks": "^3.9.5",
        "antd4": "npm:antd@4.24.16",
        "dotenv": "^17.2.1",
        "http-proxy-middleware": "0.19.1",
        "ihr360-web-ui3": "npm:ihr360-web-ui@7.0.0-beta",
        "intl": "1.2.5",
        "irs-tools": "6.1.5-beta",
        "lexical": "0.12.6",
        "lodash": "^4.17.21",
        "moment": "2.26.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-intl": "6.4.4",
        "react-redux": "^9.0.0",
        "react-router-dom": "6.22.3",
        "react-scripts": "5.0.1",
        "redux": "^5.0.1",
        "redux-devtools-extension": "2.13.2",
        "redux-logger": "3.0.6",
        "redux-thunk": "2.2.0",
        "single-spa-react": "6.0.2",
        "typescript": "^5.9.2",
        "url-search-params-polyfill": "7.0.0",
        "versiony": "2.0.1"
    },
    "scripts": {
        "build-vendor": "cross-env NODE_ENV=production webpack --config webpack.dll.config.js --colors --display-modules",
        "start": "rsbuild dev --mode development",
        "build:QA": "cross-env PUSH_NODE_ENV=qa2 rsbuild build --mode production",
        "build:Beta": "cross-env PUSH_NODE_ENV=beta rsbuild build --mode production",
        "build:Prod": "cross-env PUSH_NODE_ENV=production rsbuild build --mode production"
    },
    "devDependencies": {
        "@eslint/js": "^8.56.0",
        "@svgr/webpack": "^8.1.0",
        "@types/intl": "1.2.0",
        "core-js": "^3.41.0",
        "cross-env": "7.0.3",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "less": "3.13.1",
        "vite": "^5.0.12"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}"
        ],
        "setupFiles": [
            "<rootDir>/config/polyfills.js"
        ],
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
            "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web"
        },
        "moduleFileExtensions": [
            "web.ts",
            "ts",
            "web.tsx",
            "tsx",
            "web.js",
            "js",
            "web.jsx",
            "jsx",
            "json",
            "node",
            "mjs"
        ],
        "globals": {
            "ts-jest": {
                "tsConfigFile": "D:\\workplace\\irenshi-convenient-admin\\tsconfig.test.json"
            }
        }
    },
    "theme": {
        "ant-cls-prefix": "applet-base-ant4",
        "ihr-prefix": "applet-base-ihr3"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "sideEffects": [
        "*.css",
        "*.less"
    ]
}
